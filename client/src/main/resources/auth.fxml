<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.liberation.semenov.controllers.AuthController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="40.0"/>
    </padding>
    <Text fx:id="attemptsInfo" text="У вас 3 попытки на вход"/>
    <TextField fx:id="nicknameField" promptText="Введите логин" />
    <PasswordField fx:id="passwordField" promptText="Введите пароль" />
    <Button fx:id="authButton" text="Войти" onAction="#onAuthorize"/>
    <Button fx:id="regButton" text="Зарегистрироваться" onAction="#onRegister" />
    <Button fx:id="continueButton" text="Продолжить" style="-fx-text-color: green;" visible="false"/>
</VBox>
