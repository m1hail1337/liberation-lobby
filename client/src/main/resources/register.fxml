<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.liberation.semenov.controllers.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <TextField fx:id="loginField" promptText="Введите логин"/>
    <PasswordField fx:id="passwordField" promptText="Введите пароль"/>
    <Text fx:id="statusInfo" visible="false"/>
    <Button fx:id="regButton" text="Зарегистрироваться" onAction="#onRegister"/>
</VBox>
